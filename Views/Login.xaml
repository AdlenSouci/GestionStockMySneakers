<Window x:Class="GestionStockMySneakers.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:metro="http://metro.mahapps.com/winfx/2009"

        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionStockMySneakers.Views"
        xmlns:uc="clr-namespace:GestionStockMySneakers.Views"
        mc:Ignorable="d"
        Title="Login"
        Height="750"
        Width="1150"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#edd6ed">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Margin="262,135,262,236">
            <Label Content="Username : " />
            <TextBox x:Name="txtUsername" />
            <Label Content="Password : " Margin="0 10 0 0" />
            <PasswordBox x:Name="passwordBox" />
        </StackPanel>
        <Button
            Content="Login"
            
            Margin="0,315,0,409"
            Width="52"
            
            HorizontalAlignment="Center"
            Click="Button_Click"
            />
    </Grid>
</Window>
