<Window x:Class="GestionStockMySneakers.Views.Login" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:metro="http://metro.mahapps.com/winfx/2009"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionStockMySneakers.Views"
        mc:Ignorable="d"
        Title="Login"
        Height="750"
        Width="1150"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MouseDown="Window_MouseDown">

    <Grid Background="LightYellow">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Gestion du site My Sneakers" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="DarkOrange" 
                   HorizontalAlignment="Center" 
                   Margin="0,20,0,10" />

        <Button Grid.Row="4"
        Content="Quitter"
        Margin="10,20,0,50"
        Width="120"
        Height="40"
        HorizontalAlignment="Right"
        Background="Red"
        Foreground="White"
        FontWeight="Bold"
        Click= "Button_Click_quitt"/>


        <TextBlock Grid.Row="1" 
                   Text="Veuillez vous connecter" 
                   FontSize="16" 
                   Foreground="DimGray" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20" />

        <Grid Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="/Assets/logo.png" Width="150" Height="150" HorizontalAlignment="Center" />
            </StackPanel>
        </Grid>

        <Border Grid.Row="3" 
                Background="FloralWhite" 
                Margin="262,59,262,136" 
                Padding="20">
            <StackPanel>
                <Label Content="Email : " FontSize="14"  FontWeight="SemiBold" />
                <TextBox x:Name="txtEmail" Text="admin@example.com"   Margin="0,5,0,15" />

                <Label Content="Password :" FontSize="14" FontWeight="SemiBold" />
                <StackPanel Orientation="Horizontal">
                    <PasswordBox x:Name="passwordBox" Password="44-SS_qq" Margin="0,5,0,15" Width="200" />
                    <Button x:Name="btnShowPassword" Content="👁️" Width="30" Click="btnShowPassword_Click" />
                </StackPanel>
            </StackPanel>
        </Border>

        <Button Grid.Row="4"
                Content="Login"
                Margin="0,20,0,50"
                Width="120"
                Height="40"
                HorizontalAlignment="Center"
                Background="DarkOrange"
                Foreground="LightYellow"
                FontWeight="Bold"
                Click="Button_Click" />
    </Grid>
</Window>
