<Page x:Class="GestionStockMySneakers.Pages.Marques"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestionStockMySneakers.Pages"
      mc:Ignorable="d"
      Title="Marques">

    <Grid MouseDown="Grid_MouseDown">

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Name="lblMarques" Content="Marques (0)" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#333"/>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!--DataGrid-->
            <DataGrid Grid.Column="0" SelectionMode="Single" AutoGenerateColumns="False" x:Name="dgMarques" IsReadOnly="True" Margin="0,0,0,10" Background="#FFF" Foreground="#333" AlternatingRowBackground="#F0F0F0" BorderBrush="#CCC" BorderThickness="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding id}" Header="Id" Width="1*" />
                    <DataGridTextColumn Binding="{Binding nom_marque}" Header="Marque" Width="6*" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Spinner -->
            <ProgressBar Name="pbLoading" IsIndeterminate="True" Width="200" Height="20"
                 Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

            <!--Detail-->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600*" />
                    <ColumnDefinition Width="101*"/>
                    <ColumnDefinition Width="99*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,-28,0,0" >


                    <!--ID-->
                    <StackPanel  Orientation="Horizontal">
                        <Label Content="ID :" Width="150" />
                        <Label Name="txtId" Width="450" />
                    </StackPanel>

                    <!-- Marque -->
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Nom :" Width="150"/>
                        <TextBox Name="SAI_Nom" Width="450"/>
                    </StackPanel>



                    <StackPanel Grid.Row="9" Margin="0,5,0,0" Orientation="Horizontal" HorizontalAlignment="Center" Width="216">
                        <Button  Name="btnAjouter" Content="Ajouter" Click="btnAjouter_Click" Width="65" Height="21" ></Button>
                        <Button Name="btnModifier" Content="Modifier" Click="btnModifier_Click" Width="65" Margin="10 0 10 0" Height="21" ></Button>
                        <Button  Name="btnSupprimer" Content="Supprimer" Click="btnSupprimer_Click" Width="66" Height="21"></Button>

                    </StackPanel>

                <!-- Nom de la marque -->
                <WrapPanel Grid.Row="1" Margin="0 2 0 2">
                    <Label Content="Marque :" FontWeight="Bold" Width="150" HorizontalAlignment="Left"/>
                    <TextBox Name="txtNomMarque" Text="{Binding SelectedItem.nom_marque, ElementName=dgMarques, Mode=OneWay}" VerticalContentAlignment="Center" Width="270" />
                </WrapPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,10,0,0">
                    <Button Name="btnAjouter" Content="Nouveau" Click="btnAjouter_Click" Height="30" Width="80" Background="#4CAF50" Margin="150 0 5 0"/>
                    <Button Name="btnEnregistrer" Content="Enregistrer" Click="btnEnregistrer_Click" Height="30" Width="85" Background="#FFC107" Margin="5 0 5 0"/>
                    <Button Name="btnSupprimer" Content="Supprimer" Click ="btnSupprimer_Click" Height="30" Width="90" Background="#F44336"/>
                </StackPanel>

            </Grid>

        </Grid>
        <Label Grid.Row="2" Content="Footer" />
    </Grid>
</Page>
