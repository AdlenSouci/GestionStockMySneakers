<Page x:Class="GestionStockMySneakers.Pages.Avis"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:GestionStockMySneakers.Pages"
      mc:Ignorable="d"
      Title="Avis"
         MouseDown="Page_MouseDown">

    <Grid Background="AliceBlue" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>


        </Grid.RowDefinitions>

        <!-- Titre des avis -->
        <Label Grid.Row="0" Name="lblAvis" Content="Avis (0)" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#333"/>

        <!-- Section principale avec DataGrid et options de gestion -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                
            </Grid.ColumnDefinitions>

            <!-- DataGrid affichant les avis -->
            <DataGrid Grid.Column="0" SelectionMode="Single" AutoGenerateColumns="False" x:Name="dgAvis" IsReadOnly="True" Margin="0,0,0,10" Background="#FFF" Foreground="#333" AlternatingRowBackground="#F0F0F0" BorderBrush="#CCC" BorderThickness="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding user_id}" Header="Utilisateur" Width="1*" />
                    <DataGridTextColumn Binding="{Binding article_id}" Header="Article" Width="1*" />
                    <DataGridTextColumn Binding="{Binding contenu}" Header="Contenu" Width="3*" />
                    <DataGridTextColumn Binding="{Binding note}" Header="Note" Width="1*" />
                    <DataGridTextColumn Binding="{Binding created_at}" Header="Date" Width="2*" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- ProgressBar pour afficher un chargement -->
            <ProgressBar Name="pbLoading" IsIndeterminate="True" Width="200" Height="20"
                         Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

            <!-- Informations de l'avis sélectionné -->
            <Grid Grid.Column="1" Margin="5 0 15 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <!-- Affichage des informations de l'avis sélectionné -->
              

                <WrapPanel Grid.Row="0" Margin="0 2 0 2">
                    <Label Content="ID Utilisateur : " Width="150" FontWeight="Bold" HorizontalAlignment="Left"/>
                    <TextBox Name="txtUserId" Text="{Binding SelectedItem.user_id, ElementName=dgAvis, Mode=TwoWay}" VerticalContentAlignment="Center" Width="270" />
                </WrapPanel>


                <WrapPanel Grid.Row="1" Margin="0 2 0 2">
                    <Label Content="Article :" FontWeight="Bold" Width="150" HorizontalAlignment="Left"/>
                    <TextBox Name="txtArticleId" Text="{Binding SelectedItem.article_id, ElementName=dgAvis, Mode=OneWay}" VerticalContentAlignment="Center" Width="270" />
                </WrapPanel>

                <WrapPanel Grid.Row="2" Margin="0 2 0 2">
                    <Label Content="Contenu :" FontWeight="Bold" Width="150" HorizontalAlignment="Left"/>
                    <TextBox Name="txtContenu" Text="{Binding SelectedItem.contenu, ElementName=dgAvis, Mode=OneWay}" VerticalContentAlignment="Center" Width="270" />
                </WrapPanel>

                <WrapPanel Grid.Row="3" Margin="0 2 0 2">
                    <Label Content="Note :" FontWeight="Bold" Width="150" HorizontalAlignment="Left"/>
                    <TextBox Name="txtNote" Text="{Binding SelectedItem.note, ElementName=dgAvis, Mode=OneWay}" VerticalContentAlignment="Center" Width="270" />
                </WrapPanel>

                <WrapPanel Grid.Row="4" Margin="0 2 0 2">
                    <Label Content="Date :" FontWeight="Bold" Width="150" HorizontalAlignment="Left"/>
                    <TextBox Name="txtCreatedAt" Text="{Binding SelectedItem.created_at, ElementName=dgAvis, Mode=OneWay}" VerticalContentAlignment="Center" Width="270" />
                </WrapPanel>
                <WrapPanel Grid.Row="5" Margin="0 2 0 2">
                    <Label Content="ID : " Width="150" FontWeight="Bold" HorizontalAlignment="Left"/>
                    <TextBox Name="txtId" Text="{Binding SelectedItem.id, ElementName=dgAvis, Mode=OneWay}" VerticalContentAlignment="Center" Width="270" />
                </WrapPanel>

                <!-- ID de l'avis sélectionné --><!--
                <Label Name="txtId" Content="{Binding SelectedItem.id, ElementName=dgAvis, Mode=OneWay}" />-->

                <!-- Boutons d'action -->
                <StackPanel Grid.Row="6" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,10,0,0">
                    <Button Name="btnAjouter" Content="Nouveau" Click="btnAjouter_Click" Height="30" Width="80" Background="#4CAF50" Margin="150 0 5 0"/>
                    <Button Name="btnEnregistrer" Content="Enregistrer" Click="btnEnregistrer_Click" Height="30" Width="85" Background="#FFC107" Margin="5 0 5 0"/>
                    <Button Name="btnSupprimer" Content="Supprimer" Click="btnSupprimer_Click" Height="30" Width="90" Background="#F44336"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Section pour répondre à un avis -->
        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock Text="Réponse à l'avis : " FontWeight="SemiBold" Margin="0,10"/>
            <TextBox Name="txtReponse" Width="300" Height="100" Margin="0,5" VerticalScrollBarVisibility="Auto" 
                     HorizontalAlignment="Stretch" Text="{Binding reponse}" />
            <Button Content="Envoyer Réponse" Name="btnEnvoyerReponse" Margin="0,10" HorizontalAlignment="Right" Width="150"
                    Click="btnEnvoyerReponse_Click"/>
        </StackPanel>

        <!-- Footer -->
        <Label Grid.Row="3" Content="Footer" />
    </Grid>
</Page>

