<Page x:Class="GestionStockMySneakers.Pages.Avis"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Avis" Height="600" Width="800">

    <Page.Resources>
        <!-- Styles similaires à ceux de la page Commande -->
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <!-- Zone de réponse -->
        </Grid.RowDefinitions>

        <!-- Titre -->
        <Label Grid.Row="0" Content="Avis" FontSize="24" FontWeight="Bold" Foreground="DarkOrange" HorizontalAlignment="Center"/>

        <!-- DataGrid -->
        <DataGrid SelectionMode="Single" AutoGenerateColumns="False" Name="dgAvis" IsReadOnly="True" Margin="10" Grid.Row="1"
                  SelectionChanged="dgAvis_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding UserId}" Header="Utilisateur" Width="auto"/>
                <DataGridTextColumn Binding="{Binding ArticleId}" Header="Article" Width="auto"/>
                <DataGridTextColumn Binding="{Binding Contenu}" Header="Contenu" Width="auto"/>
                <DataGridTextColumn Binding="{Binding Note}" Header="Note" Width="auto"/>
                <DataGridTextColumn Binding="{Binding CreatedAt}" Header="Date" Width="auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Zone de réponse -->
        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock Text="Réponse à l'avis : " FontWeight="SemiBold" Margin="0,10"/>
            <TextBox Name="txtReponse" Width="300" Height="100" Margin="0,5" VerticalScrollBarVisibility="Auto" 
                     HorizontalAlignment="Stretch" Text="{Binding Reponse}" />
            <Button Content="Envoyer Réponse" Name="btnEnvoyerReponse" Margin="0,10" HorizontalAlignment="Right" Width="150"
                    Click="btnEnvoyerReponse_Click"/>
        </StackPanel>

        <!-- Bouton pour supprimer un avis -->
        <Button Content="Supprimer Avis" Name="btnSupprimer" Grid.Row="3" Margin="10" HorizontalAlignment="Right" Width="150"
                Click="btnSupprimer_Click" />
    </Grid>
</Page>
