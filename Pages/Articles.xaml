<Page x:Class="GestionStockMySneakers.Pages.Articles"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestionStockMySneakers.Pages"
      mc:Ignorable="d"
      Title="Articles" Height="600" Width="800">

    <!-- Définition des styles pour les boutons -->
    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- Border avec CornerRadius appliqué -->
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="AliceBlue" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- Titre -->
        <Label Grid.Row="0" Name="lblArticles" Content="Articles" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#333"/>

        <!-- Contenu -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <!-- Liste -->
            <DataGrid Grid.Row="0" SelectionMode="Single" AutoGenerateColumns="False" Name="dgArticles" IsReadOnly="True" SelectionChanged="dgArticles_SelectionChanged" Margin="0,0,0,10" Background="#FFF" Foreground="#333" AlternatingRowBackground="#F0F0F0" BorderBrush="#CCC" BorderThickness="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding marque}" Header="Marque" Width="*" />
                    <DataGridTextColumn Binding="{Binding nom_famille}" Header="Nom de la famille" Width="*" />
                    <DataGridTextColumn Binding="{Binding modele}" Header="Modèle" Width="*" />
                    <DataGridTextColumn Binding="{Binding description}" Header="Description" Width="*" />
                    <DataGridTextColumn Binding="{Binding couleur}" Header="Couleur" Width="*" />
                    <DataGridTextColumn Binding="{Binding prix_public}" Header="Prix public" Width="*" />
                    <DataGridTextColumn Binding="{Binding prix_achat}" Header="Prix d'achat" Width="*" />
                    <DataGridTextColumn Binding="{Binding img}" Header="Image" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Détail -->
            <Border Grid.Row="1" Margin="0,10,0,0" Background="#FFF" Padding="10" BorderBrush="#CCC" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical" Grid.Column="0" Margin="10">

                        <!-- ID -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="ID :" Width="150" FontWeight="Bold"/>
                            <Label Name="txtId" Width="270" />
                        </StackPanel>

                        <!-- Marque -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="Marque :" Width="150" FontWeight="Bold"/>
                            <TextBox Name="SAI_Marque" Width="270" />
                        </StackPanel>

                        <!-- Nom de la famille -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="Famille :" Width="150" FontWeight="Bold"/>
                            <TextBox Name="SAI_NomFamille" Width="270" />
                        </StackPanel>

                        <!-- Modèle -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="Modèle :" Width="150" FontWeight="Bold"/>
                            <TextBox Name="SAI_Modele" Width="270" />
                        </StackPanel>

                        <!-- Description -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="Description :" Width="150" FontWeight="Bold"/>
                            <TextBox Name="SAI_Description" Width="270" Height="61" TextWrapping="Wrap" TextChanged="SAI_Description_TextChanged"/>
                        </StackPanel>

                        <!-- Couleur -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="Couleur :" Width="150" FontWeight="Bold"/>
                            <TextBox Name="SAI_Couleur" Width="270" />
                        </StackPanel>

                        <!-- Prix public -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="Prix public :" Width="150" FontWeight="Bold"/>
                            <TextBox Name="SAI_PrixPublic" Width="270" />
                        </StackPanel>

                        <!-- Prix d'achat -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="Prix d'achat :" Width="150" FontWeight="Bold"/>
                            <TextBox Name="SAI_PrixAchat" Width="270" />
                        </StackPanel>

                        <!-- Image URL -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="Image :" Width="150" FontWeight="Bold"/>
                            <TextBox Name="SAI_Img" Width="270" />
                        </StackPanel>

                    </StackPanel>

                    <!-- Image -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,10,20,10">
                        <Image x:Name="ImageArticle" Width="197" Height="148" Stretch="Uniform" />
                    </StackPanel>

                    <!-- Buttons placed below the image -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Width="232" Height="39">
                        <Button Name="btnAjouter" Content="Ajouter" Click="btnAjouter_Click" Style="{StaticResource RoundedButtonStyle}" Background="#4CAF50" Width="54"/>
                        <Button Name="btnModifier" Content="Modifier" Click="btnModifier_Click" Style="{StaticResource RoundedButtonStyle}" Background="#FFC107" Width="58"/>
                        <Button Name="btnSupprimer" Content="Supprimer" Click="btnSupprimer_Click" Style="{StaticResource RoundedButtonStyle}" Background="#F44336" Width="64"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
