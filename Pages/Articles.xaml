<Page x:Class="GestionStockMySneakers.Pages.Articles"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestionStockMySneakers.Pages"
      mc:Ignorable="d"
      Title="Articles"
      MouseDown="Page_MouseDown">
    
    <Grid Background="AliceBlue" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Name="lblArticles" Content="Articles" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#333"/>

        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>

            <DataGrid Grid.Row="0" SelectionMode="Single" AutoGenerateColumns="False" x:Name="dgArticles" IsReadOnly="True" Margin="0,0,0,10" Background="#FFF" Foreground="#333" AlternatingRowBackground="#F0F0F0" BorderBrush="#CCC" BorderThickness="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding id_marque}" Header="id_marque" Width="*" Visibility="Collapsed" />
                    <DataGridTextColumn Binding="{Binding nom_marque}" Header="Marque" Width="*" />
                    <DataGridTextColumn Binding="{Binding id_famille}" Header="id_famille" Width="*" Visibility="Collapsed" />
                    <DataGridTextColumn Binding="{Binding nom_famille}" Header="Famille" Width="*" />
                    <DataGridTextColumn Binding="{Binding modele}" Header="Modèle" Width="*" />
                    <DataGridTextColumn Binding="{Binding description}" Header="Description" Width="*" />
                    <DataGridTextColumn Binding="{Binding id_couleur}" Header="id_couleur" Width="*" Visibility="Collapsed" />
                    <DataGridTextColumn Binding="{Binding nom_couleur}" Header="Couleur" Width="*" />
                    <DataGridTextColumn Binding="{Binding prix_public}" Header="Prix public" Width="*" />
                    <DataGridTextColumn Binding="{Binding prix_achat}" Header="Prix d'achat" Width="*" />
                    <DataGridTextColumn Binding="{Binding img}" Header="Image" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Spinner -->
            <ProgressBar Name="pbLoading" IsIndeterminate="True" Width="200" Height="20"
                 Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

            <Border Grid.Row="1" Margin="0,10,0,0" Background="#FFF" Padding="10" BorderBrush="#CCC" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical" Grid.Column="0" Margin="10">
                        <WrapPanel Margin="0 2 0 2">
                            <Label Content="ID :" Width="150" FontWeight="Bold"/>
                            <Label x:Name="txtId" Content="{Binding SelectedItem.id, ElementName=dgArticles, Mode=OneWay}" Width="270" />
                        </WrapPanel>
                        <WrapPanel Margin="0 2 0 2">
                            <Label Content="Marque :" Width="150" FontWeight="Bold"/>
                            <ComboBox SelectedValue="{Binding SelectedItem.id_marque, ElementName=dgArticles, Mode=OneWay}" x:Name="cmbMarque" Width="270"  />
                        </WrapPanel>
                        <WrapPanel Margin="0 2 0 2">
                            <Label Content="Famille :" Width="150" FontWeight="Bold"/>
                            <ComboBox SelectedValue="{Binding SelectedItem.id_famille, ElementName=dgArticles, Mode=OneWay}" x:Name="cmbFamille" Width="270" />
                        </WrapPanel>
                        <WrapPanel Margin="0 2 0 2">
                            <Label Content="Modèle :" Width="150" FontWeight="Bold"/>
                            <TextBox Text="{Binding SelectedItem.modele, ElementName=dgArticles, Mode=OneWay}" x:Name="txtModele" Width="270" />
                        </WrapPanel>
                        <WrapPanel Margin="0 2 0 2">
                            <Label Content="Description :" Width="150" FontWeight="Bold"/>
                            <TextBox  Text="{Binding SelectedItem.description, ElementName=dgArticles, Mode=OneWay}" x:Name="txtDescription" Width="270" Height="80" TextWrapping="Wrap"/>
                        </WrapPanel>
                        <WrapPanel Margin="0 2 0 2">
                            <Label Content="Couleur :" Width="150" FontWeight="Bold"/>
                            <ComboBox SelectedValue="{Binding SelectedItem.id_couleur, ElementName=dgArticles, Mode=OneWay}" x:Name="cmbCouleur" Width="270" />
                        </WrapPanel>
                        <WrapPanel Margin="0 2 0 2">
                            <Label Content="Prix public :" Width="150" FontWeight="Bold"/>
                            <TextBox Text="{Binding SelectedItem.prix_public, ElementName=dgArticles, Mode=OneWay}" x:Name="txtPrixPublic" Width="270" />
                        </WrapPanel>
                        <WrapPanel Margin="0 2 0 2">
                            <Label Content="Prix d'achat :" Width="150" FontWeight="Bold"/>
                            <TextBox Text="{Binding SelectedItem.prix_achat, ElementName=dgArticles, Mode=OneWay}" x:Name="txtPrixAchat" Width="270" />
                        </WrapPanel>
                        <WrapPanel Margin="0 2 0 2">
                            <Label Content="Image :" Width="150" FontWeight="Bold"/>
                            <TextBox Text="{Binding SelectedItem.img, ElementName=dgArticles, Mode=OneWay}" x:Name="txtImg" Width="270" />
                        </WrapPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">
                            <Button Name="btnAjouter" Content="Nouveau" Click="btnAjouter_Click" Height="30" Width="80" Background="#4CAF50" Margin="0 0 5 0"/>
                            <Button Name="btnEnregistrer" Content="Enregistrer" Click="btnEnregistrer_Click" Height="30" Width="85" Background="#FFC107" Margin="0 0 5 0"/>
                            <Button Name="btnSupprimer" Content="Supprimer" Click ="btnSupprimer_Click" Height="30" Width="90" Background="#F44336"/>
                        </StackPanel>

                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,10,20,10">
                        <Image x:Name="ImageArticle" Width="250" Height="180" Stretch="Uniform" />
                    </StackPanel>


                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
