<Page x:Class="GestionStockMySneakers.Pages.Stock"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestionStockMySneakers.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Stock">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Gestionnaire de Stock" FontSize="20" FontWeight="Bold"/>
        </StackPanel>
        <Button Content="ajouter" HorizontalAlignment="Left" Margin="666,34,0,0" Grid.Row="1" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="supprimer" HorizontalAlignment="Left" Margin="530,34,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Button Content="consulter" HorizontalAlignment="Left" Margin="400,34,0,0" Grid.Row="1" VerticalAlignment="Top" Click="Button_Click"/>


    </Grid>
</Page>
