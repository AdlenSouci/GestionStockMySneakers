<Window x:Class="GestionStockMySneakers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionStockMySneakers"
        Title="Gestion Stock MySneakers"
        Height="900"
        Width="1300"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResize"
        MouseDown="Window_MouseDown">


    <Grid Background="Khaki">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>





        <!--// Menu Panel //-->
        <StackPanel Grid.Column="0"
                    Background="#F8EEB7"
                    Width="230"
                    Orientation="Vertical"
                    HorizontalAlignment="Left">

            <!--// Channel Name //-->

            <Grid Height="50"
                  VerticalAlignment="Top"
                  Margin="0,30,0,0">

                <Border 
                        Height="26"
                        CornerRadius="3,0,0,3"
                        Width="6"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left" Margin="224,0,0,0" />

                <TextBlock Text="GestionStockMySneakers"
                           Foreground="Gray"
                           FontFamily="Fonts/#Orbitron Medium"
                           FontSize="15"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />

            </Grid>

            <!--// Main Menu //-->

            <Menu Height="450"
                  Background="Transparent"
                  Margin="0,40,0,0">

                <Menu.ItemsPanel>

                    <ItemsPanelTemplate>

                        <VirtualizingStackPanel Orientation="Vertical" />

                    </ItemsPanelTemplate>

                </Menu.ItemsPanel>

                <!--// Main Menu - Home //-->

                <MenuItem Header="Home"
                          Template="{StaticResource Menu_Template}" Click="MenuItem_Click" >

                    <MenuItem.Icon>

                        <Image Source="Assets/img_home.png"
                               Stretch="None" />

                    </MenuItem.Icon>

                </MenuItem>

                <!--// Main Menu - Music //-->

                <MenuItem Header="Crud"
                          Template="{StaticResource Menu_SubMenu_Template}" RenderTransformOrigin="0.27,0.56">

                    <MenuItem.Icon>

                        <Image Source="Assets/img_crud.png"
                               Stretch="None" />

                    </MenuItem.Icon>


                    <MenuItem Header="Crud Article"
                              Template="{StaticResource Item_Template}"   Click="MenuItem_Click_A" >



                    </MenuItem>


                    <MenuItem Header="Crud Marque"
                              Template="{StaticResource Item_Template}" Click="MenuItem_Click_M">



                    </MenuItem>




                </MenuItem>


                <MenuItem Header="Stock"
                    Template="{StaticResource Menu_SubMenu_Template}" RenderTransformOrigin="0.27,0.56">

                    <MenuItem.Icon>

                        <Image Source="Assets/img_folder.png"
                            Stretch="None" />

                    </MenuItem.Icon>



                  



                    <MenuItem Header="Gerer"
                        Template="{StaticResource Item_Template}" Click="MenuItem_Click_Gerer">



                    </MenuItem>






                </MenuItem>



                <MenuItem Header="Commandes" 
                          Template="{StaticResource Menu_Template}" Click="MenuItem_Click_C">
                          

                    <MenuItem.Icon>

                        <Image Source="Assets/img_history.png"
                               Stretch="None" />

                    </MenuItem.Icon>

                </MenuItem>
                <MenuItem Header="Avis"
                          Template="{StaticResource Menu_Template}" Click="MenuItem_Click_Avis">


                    <MenuItem.Icon>

                        <Image Source="Assets/img_history.png"
                               Stretch="None" />

                    </MenuItem.Icon>

                </MenuItem>
                

                <!--// Main Menu - Settings //-->

                <MenuItem Header="Parametre"
                          Template="{StaticResource Menu_SubMenu_Template}" Click="MenuItem_Click_8">

                    <MenuItem.Icon>

                        <Image Source="Assets/img_setting.png"
                               Stretch="None" />

                    </MenuItem.Icon>

                    <!--// Settings Submenu - Input / Codecs //-->

                    <MenuItem Header="Input / Codecs"
                              Template="{StaticResource Item_Template}">

                        <MenuItem.Icon>

                            <Image Source="Assets/img_input.png"
                                   Stretch="None" />

                        </MenuItem.Icon>

                    </MenuItem>

                    <!--// Settings Submenu - Hotkeys //-->

                    <MenuItem Header="Hotkeys"
                              Template="{StaticResource Item_Template}">

                        <MenuItem.Icon>

                            <Image Source="Assets/img_hotkey.png"
                                   Stretch="None" />

                        </MenuItem.Icon>

                    </MenuItem>

                </MenuItem>

                <!--// Main Menu - About //-->

                <MenuItem Header="A propos"
                          Template="{StaticResource Menu_Template}">

                    <MenuItem.Icon>

                        <Image Source="Assets/img_about.png"
                               Stretch="None" />

                    </MenuItem.Icon>

                </MenuItem>

                <!--// Main Menu - Exit //-->

                <MenuItem Header="Exit"
                          Template="{StaticResource Menu_Template}" Click="MenuItem_Click_4">

                    <MenuItem.Icon>

                        <Image Source="Assets/img_exit.png"
                               Stretch="None" />

                    </MenuItem.Icon>

                </MenuItem>

            </Menu>
       

        </StackPanel>


        <Grid Grid.Column="1" >
            <Frame Grid.Row="0" x:Name="MainFrame" NavigationUIVisibility="Hidden" Navigated="MainFrame_Navigated" Width="auto" Height="auto" Margin="0,0,0,0" />
            <TextBlock  Grid.Row="1" Text="GestionStockMySneakers"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Foreground="Gray"
            FontFamily="Fonts/#Orbitron Medium"
            FontSize="12"
            Height="21" 
            Width="180"
            />
        </Grid>
    </Grid>

</Window>
